.wea-describe {
  margin-top: 30px;
  width: 100%;
  height: 180px;
  min-height: 150rpx;
  overflow: hidden;
  border-bottom: 1px solid #b5e4ff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.wea-describe .des {
  font-size: 30rpx;
  line-height: 2;
}

.life-swiper {
  width: 100%;
  height: 130rpx;
}

.life-swiper .li-item {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  line-height: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.life-swiper .li-item .ti {
  line-height: 60rpx;
  padding: 0 10rpx;
  color: rgb(180, 18, 6);
  font-size: 28rpx;
  border-radius: 4rpx;
  font-weight: bold;
  text-align: center;
}

.life-swiper .li-item .td {
  color: rgb(37, 37, 37);
  font-weight: bold;
  margin-left: 10rpx;
}
.wea-record {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.wea-record .rec-list {
  padding: 0 30rpx;
  overflow: hidden;
}

.wea-record .rec-list .mok {
  padding: 15rpx 0;
  border-bottom: 1px solid #b5e4ff;
  overflow: hidden;
}

.wea-record .rec-list .mok:last-of-type {
  border-bottom-color: transparent;
}

.wea-record .rec-list .mok .mok-tl,
.wea-record .rec-list .mok .mok-tr {
  width: 50%;
  float: left;
  overflow: hidden;
  padding-right: 15rpx;
  box-sizing: border-box;
}

.wea-record .rec-list .mok .mok-tr {
  float: right;
}

.wea-record .rec-list .k-t {
  font-size: 24rpx;
  color: rgb(209, 236, 255);
  display: block;
}

.wea-record .rec-list .k-d {
  font-size: 36rpx;
  color: #fff;
  display: block;
  margin-top: 5rpx;
}

